<form method="POST" action="/add-question">
  <h1>Add a New Question</h1>
  <h3>Question</h3>
  <div class="form-group">
    <label for="question-text">Question Text</label>
    <input type="text" class="form-control" id="question-text" placeholder="Enter display text">
  </div>
  <h3>Answer Options</h3>
  <p>Add up to 5 or less answer options (max value of 10)</p>
  <div class="multi-form">
    <div class="row">
        <div class="col">
        <input type="text" id="answer-text-1" class="form-control" placeholder="Option 1">
        </div>
        <div class="col">
        <input type="text" id="answer-value-1" class="form-control" placeholder="Value 1">
        </div>
    </div>
    <div class="row">
        <div class="col">
        <input type="text" id="answer-text-2" class="form-control" placeholder="Option 2">
        </div>
        <div class="col">
        <input type="text" id="answer-value-2" class="form-control" placeholder="Value 2">
        </div>
    </div>
    <div class="row">
        <div class="col">
        <input type="text" id="answer-text-3" class="form-control" placeholder="Option 3">
        </div>
        <div class="col">
        <input type="text" id="answer-value-3" class="form-control" placeholder="Value 3">
        </div>
    </div>
    <div class="row">
        <div class="col">
        <input type="text" id="answer-text-4" class="form-control" placeholder="Option 4">
        </div>
        <div class="col">
        <input type="text" id="answer-value-4" class="form-control" placeholder="Value 4">
        </div>
    </div>
    <div class="row">
        <div class="col">
        <input type="text" id="answer-text-5" class="form-control" placeholder="Option 5">
        </div>
        <div class="col">
        <input type="text" id="answer-value-5" class="form-control" placeholder="Value 5">
        </div>
    </div>
  </div>
  <button type="submit" class="btn btn-success">Submit</button>
</form>